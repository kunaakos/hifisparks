{
	"include": [
		"./src/*"
	],
	"exclude": [
		"node_modules",
	],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": [
			"es2015",
			"es2016",
			"es2017"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"sourceMap": true,
		"target": "es6"
	}
}
